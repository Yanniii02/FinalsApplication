<p style="color: green"><%= notice %></p>

<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th>Body Number</th>
      <th>Plate Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.body_number %></td>
        <td><%= bus.plate_number %></td>
        <td>
          <%= link_to 'Show', bus %> |
          <%= link_to 'Edit', edit_bus_path(bus) %> |
          <%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Bus', new_bus_path %>