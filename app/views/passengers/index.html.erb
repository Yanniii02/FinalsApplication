<p style="color: green"><%= notice %></p>

<h1>Passengers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Number</th>
      <th>Email Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.contact_number %></td>
        <td><%= passenger.email_address %></td>
        <td>
          <%= link_to 'Show', passenger %> |
          <%= link_to 'Edit', edit_passenger_path(passenger) %> |
          <%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Passenger', new_passenger_path %>